# Database
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://dmarc:your_secure_password_here@localhost:5432/dmarc_analyzer

# Redis
REDIS_URL=redis://localhost:6379

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# Google OAuth (for Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Gmail API (for importing DMARC reports)
# Uses same Google OAuth credentials but with different scopes
GMAIL_CLIENT_ID=your_google_client_id
GMAIL_CLIENT_SECRET=your_google_client_secret

# IP Geolocation (optional - uses free ip-api.com by default)
# IP_API_KEY=your_ip_api_key

# Email/SMTP (for alerts and scheduled reports)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=smtp_password
ALERT_FROM_EMAIL=alerts@example.com

# File Storage (for logos/branding)
# UPLOAD_DIR=./uploads
# Or use S3-compatible storage:
# S3_BUCKET=your-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=xxx
# S3_SECRET_KEY=xxx
